#include<cstdio>
#include<iostream>
#include<vector>
#include<algorithm>
#include<string>
#include<cstring>
#include<queue>
#include<math.h>
using namespace std;

int n;
int m;
int arr[101][101]; //숫자 1부터 시작이니까 인덱스랑 동일하게 하려고 101개 만듦.

/*
19.07.28.일
백준 문제 2606 바이러스.
플로이드 와샬 알고리즘으로 푸는 문제.
플로이드 와샬로 연결관계를 저장한 후
1에 연결돼 있는 것들의 수를 센다.
*/

int main()
{
	cin >> n >> m;

	//연결관계 저장. 방향 없으므로 a->b b->a모두 1로 저장.
	int a, b;
	for (int i = 0; i < m; i++)
	{
		cin >> a >> b;
		arr[a][b] = 1;
		arr[b][a] = 1;
	}

	//플로이드 와샬.
	for(int k=1;k<=n;k++)
		for(int i=1;i<=n;i++)
			for (int j = 1; j <= n; j++)
			{
				//동일한 경우 건너뛴다.
				if (i == j || j == k || i == k)
					continue;
				//i k와 k j가 연결돼 있다면 i j도 연결돼 있는 것.
				if (arr[i][k] == 1 && arr[k][j] == 1)
					arr[i][j] = 1;
			}

	int cnt = 0;
	//1과 연결돼 있는 것을 찾는다. 2부터 세면 됨.
	for (int i = 2; i <= n; i++)
		if (arr[1][i])
			cnt++;

	cout << cnt << endl;

	return 0;
}
