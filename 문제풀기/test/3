#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

vector<vector<int>> v;

int main(void) {
   
    int n;
    cin>>n;
    v.resize(n);
    
    for(int i=0;i<n;i++)
    {
        int a, b;
        cin>>a>>b;
        v[i].push_back(a);
        v[i].push_back(b);
    }
    
    sort(v.begin(), v.end());
    
    int ans=1;
    for(int i=0;i<n-1;i++)
    {
        if(v[i][1] > v[i+1][0])
            ans++;
    }
    
    cout<<ans<<endl;
    
    return 0;
}
